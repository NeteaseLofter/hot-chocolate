{
  "lerna": "3.22.1",
  "version": "independent",
  "npmClient": "npm",
  "stream": true,
  "parallel": false,
  "packages": [
    "packages/*"
  ],
  "npmClientArgs": [
    "--registry=https://registry.npm.taobao.org",
    "--disturl=https://npm.taobao.org/dist",
    "--no-audit"
  ],
  "command": {
    "bootstrap": {
      "hoist": true,
      "noprune": true
    },
    "publish": {
      "ignoreChanges": ["*.md", "ignored-file"],
      "message": "chore(release): publish %s",
      "access": "public"
    }
  }
}
